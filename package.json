{
	"name": "view-tree",
	"displayName": "view.tree LSP",
	"description": "Experimental Tree-sitter grammar and LSP for view.tree",
	"version": "0.1.0",
	"private": true,
	"main": "./out/vscode/extension.js",
	"engines": {
		"vscode": "^1.76.0"
	},
	"activationEvents": [
		"onLanguage:view.tree"
	],
	"contributes": {
		"languages": [
			{
				"id": "view.tree",
				"aliases": [
					"view.tree"
				],
				"extensions": [
					".view.tree"
				]
			}
		],
		"grammars": [
			{
				"language": "view.tree",
				"scopeName": "source.viewtree",
				"path": "./highlights/TextMate/tmLanguage.json"
			}
		]
	},
	"scripts": {
		"build": "tsc -p ts-config.json",
		"start-server": "node --watch  out/server/index.js --stdio",
		"watch-server": " tsc -w -p ts-config.json"
	},
	"dependencies": {
		"mol_tree2": "latest",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"devDependencies": {
		"@types/node": "^24.3.1",
		"@types/vscode": "^1.76.0",
		"typescript": "^5.9.2",
		"vscode-languageclient": "^9.0.1"
	},
	"publisher": "devcmyser",
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"url": "https://github.com/Dev-cmyser/view.tree"
	}
}
