{
	"name": "view.tree",
	"scopeName": "source.viewtree",
	"fileTypes": ["view.tree"],
	"patterns": [
		{ "include": "#components" },
		{ "include": "#bindings" },
		{ "include": "#properties" },
		{ "include": "#typed-collections" },
		{ "include": "#strings" },
		{ "include": "#comments" },
		{ "include": "#markers" }
	],
	"repository": {
		"components": {
			"patterns": [
				{
					"name": "entity.name.type.component.viewtree",
					"match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"bindings": {
			"patterns": [
				{
					"name": "keyword.operator.binding.viewtree",
					"match": "(<=>|<=|=>)"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"name": "variable.other.property.viewtree",
					"match": "[\\p{L}_][\\p{L}\\p{N}_]*"
				},
				{
					"name": "storage.modifier.viewtree",
					"match": "[*!?]+"
				}
			]
		},
		"typed-collections": {
			"patterns": [
				{
					"name": "type.builtin.viewtree",
					"match": "/\\s*([\\p{L}_][\\p{L}\\p{N}_]*)"
				},
				{
					"name": "type.builtin.viewtree",
					"match": "[*^]\\s*([\\p{L}_][\\p{L}\\p{N}_]*)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.other.viewtree",
					"match": "\\\\.*"
				},
				{
					"name": "string.quoted.other.localized.viewtree",
					"match": "@\\s+\\\\.*"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dash.viewtree",
					"match": "-.*"
				}
			]
		},
		"markers": {
			"patterns": [
				{
					"name": "punctuation.definition.list.viewtree",
					"match": "/"
				},
				{
					"name": "punctuation.definition.dict.viewtree",
					"match": "[*^]"
				}
			]
		}
	}
}
